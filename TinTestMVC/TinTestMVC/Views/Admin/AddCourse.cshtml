@model Application.DTO.NewCourseDTO

@{
    ViewData["Title"] = "Dodaj nowy kurs";
}

@section Scripts {
    <script src="~/js/validation.js"></script>
}

<div class="form-container">
    <h2 class="form-title">Dodaj nowy kurs</h2>

    <form asp-action="AddNewCourse" asp-controller="Admin" method="post" class="admin-form js-validate-form">

        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-input" name="Title" />
            <span asp-validation-for="Title" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-input" name="Description"></textarea>
            <span asp-validation-for="Description" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-input" name="Price" />
            <span asp-validation-for="Price" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-input" name="StartDate" />
            <span asp-validation-for="StartDate" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-input" name="EndDate" />
            <span asp-validation-for="EndDate" class="form-error"></span>
        </div>

       <div class="form-group">
           <label asp-for="MaxNumberOfStudents" class="form-label"></label>
           <input asp-for="MaxNumberOfStudents" type="number" class="form-input" />
           <span asp-validation-for="MaxNumberOfStudents" class="form-error"></span>
       </div>
        
        <div class="form-group">
            <label asp-for="TutorId" class="form-label">Wybierz nauczyciela (Tutor)</label>
            <select asp-for="TutorId" class="form-input" name="TutorId">
                <option value="">-- Wybierz --</option>
                @if (ViewBag.Tutors != null)
                {
                    foreach (var tutor in (List<Application.DTO.TutorDTO>)ViewBag.Tutors)
                    {
                        <option value="@tutor.Id">
                            @tutor.FirstName @tutor.LastName (@tutor.Specialisation)
                        </option>
                    }
                }
            </select>
            <span asp-validation-for="TutorId" class="form-error"></span>
        </div>

        <button type="submit" class="form-button">Dodaj nowy kurs</button>
    </form>
</div>
