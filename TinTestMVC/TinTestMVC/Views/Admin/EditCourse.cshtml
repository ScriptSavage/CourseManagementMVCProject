@model Application.DTO.EditCourseDTO

@{
    ViewData["Title"] = "Edytuj kurs";
    var courseId = ViewBag.CourseId;
}
@section Scripts {
    <script src="~/js/validation.js"></script>
}

<div class="form-container">
    <h2 class="form-title">Edytuj kurs</h2>

    <form asp-action="EditCourse" asp-controller="Admin" method="post" class="admin-form js-validate-form">
        <input type="hidden" name="id" value="@courseId" />

        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-input" name="Description"></textarea>
            <span asp-validation-for="Description" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-input" name="Price" />
            <span asp-validation-for="Price" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-input" name="StartDate" />
            <span asp-validation-for="StartDate" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-input" name="EndDate" />
            <span asp-validation-for="EndDate" class="form-error"></span>
        </div>

        <button type="submit" class="form-button">Zapisz zmiany</button>
    </form>
</div>

