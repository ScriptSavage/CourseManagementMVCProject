@model Application.DTO.RegisterViewModel

@{
    ViewData["Title"] = "Rejestracja";
}

@section Scripts {
    <script src="~/js/validateRegister.js"></script>
}

<div class="auth-container">
    <h2 class="auth-title">Rejestracja</h2>

    <div asp-validation-summary="All" class="auth-validation-summary"></div>

    <form method="post" asp-action="Register" class="auth-form js-validate-form">

        <div class="auth-input-group">
            <label asp-for="FirstName" class="auth-label"></label>
            <input asp-for="FirstName" class="auth-input" name="FirstName" />
            <span asp-validation-for="FirstName" class="auth-validation-error"></span>
        </div>

        <div class="auth-input-group">
            <label asp-for="LastName" class="auth-label"></label>
            <input asp-for="LastName" class="auth-input" name="LastName" />
            <span asp-validation-for="LastName" class="auth-validation-error"></span>
        </div>

        <div class="auth-input-group">
            <label asp-for="Email" class="auth-label"></label>
            <input asp-for="Email" class="auth-input" name="Email" />
            <span asp-validation-for="Email" class="auth-validation-error"></span>
        </div>

        <div class="auth-input-group">
            <label asp-for="Password" class="auth-label"></label>
            <input asp-for="Password" class="auth-input" type="password" name="Password" />
            <span asp-validation-for="Password" class="auth-validation-error"></span>
        </div>

        <div class="auth-input-group">
            <label asp-for="ConfirmPassword" class="auth-label"></label>
            <input asp-for="ConfirmPassword" class="auth-input" type="password" name="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="auth-validation-error"></span>
        </div>

        <button type="submit" class="auth-button">Zarejestruj</button>
    </form>
</div>
